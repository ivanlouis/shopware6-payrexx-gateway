<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/shopware/platform/master/src/Core/System/SystemConfig/Schema/config.xsd">

    <card>
        <title>Configuration</title>
        <input-field type="single-select">
            <name>platform</name>
            <label>Platform</label>
            <label lang="de-DE">Plattform</label>
            <defaultValue>payrexx.com</defaultValue>
            <placeholder>Payrexx</placeholder>
            <options>
                <option>
                    <id>payrexx.com</id>
                    <name>Payrexx</name>
                </option>
                <option>
                    <id>shop-and-pay.com</id>
                    <name>Shop and Pay</name>
                </option>
                <option>
                    <id>ideal-pay.ch</id>
                    <name>Ideal Pay</name>
                </option>
                <option>
                    <id>zahls.ch</id>
                    <name>zahls.ch</name>
                </option>
            </options>
        </input-field>
        <input-field type="text">
            <name>instanceName</name>
            <label>Instance name</label>
            <label lang="de-DE">Instanz Name</label>

            <helpText>The name of the Payrexx account</helpText>
        </input-field>
        <input-field type="text">
            <name>apiKey</name>
            <label>API Key</label>
            <label lang="de-DE">API Key</label>

            <helpText>The API key you find in your Payrexx merchant backend</helpText>
        </input-field>
    </card>
</config>